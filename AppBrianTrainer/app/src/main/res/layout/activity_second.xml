<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#D1B01D"
        android:padding="10dp"
        android:text="@string/_30s"
        android:textColor="#020202"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/Marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#5509ED"
        android:padding="12dp"
        android:text="@string/_0_0"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/Questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4E4A4A"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="377dp"
        android:layout_height="256dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/button1"
            android:layout_width="188.5dp"
            android:layout_height="128dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#3d6bf5"
            android:onClick="ChooseAnswer"
            android:tag="0"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="188.5dp"
            android:layout_height="128dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#0df2f2"
            android:onClick="ChooseAnswer"
            android:tag="2"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="188.5dp"
            android:layout_height="128dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="#c9f76e"
            android:onClick="ChooseAnswer"
            android:tag="1"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="188.5dp"
            android:layout_height="128dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#c96ef7"
            android:onClick="ChooseAnswer"
            android:tag="3"
            android:textSize="50sp" />
    </GridLayout>

    <TextView
        android:id="@+id/Ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.712" />

    <Button
        android:id="@+id/PlayAgainButton"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="359dp"
        android:layout_height="66dp"
        android:onClick="PlayAgain"
        android:shadowColor="#634A4A"
        android:text="@string/play_again"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textCursorDrawable="@android:drawable/editbox_dropdown_dark_frame"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.936" />

</androidx.constraintlayout.widget.ConstraintLayout>